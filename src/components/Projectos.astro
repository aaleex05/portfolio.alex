---
import TailwindCSS from "./icons/TailwindCSS.astro";
import HTML from "./icons/HTML.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import DjangoIcon from "./icons/DjangoIcon.astro";
import LinkIcon from "./icons/LinkIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";

const TAGS = {
    Astro: {
        name: "Astro",
        class: "bg-[#3e257a] text-white inset-shadow-sm inset-shadow-purple-500/70",
        icon: AstroIcon,
    },
    TailwindCSS: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white inset-shadow-sm inset-shadow-blue-500/70",
        icon: TailwindCSS,
    },
    HTML: {
        name: "HTML",
        class: "bg-[#7a3625] text-white inset-shadow-sm inset-shadow-orange-500/70",
        icon: HTML,
    },
    Django: {
        name: "Django",
        class: "bg-[#205943] text-white inset-shadow-sm inset-shadow-green-500/70",
        icon: DjangoIcon,
    },
};

const PROJECTS = [
    {
        title: "Portfolio - Alex Aperador",
        description:
            "Este es mi portfolio personal, donde muestro mis proyectos y habilidades como desarrollador web.",
        link: "https://portfolio-alex-gamma.vercel.app/",
        GitHub: "https://github.com/aaleex05/portfolio.alex/",
        image: "/projects/porfolio.webp",
        tags: [TAGS.Astro, TAGS.TailwindCSS, TAGS.HTML],
    },
    {
        title: "Scalify",
        description:
            "Scalify-AI es una landing page que he creado con fines educativos para mejorar mis habilidades en diseño web, maquetación y uso de tecnologías modernas como TailwindCSS y Astro. La página simula una presentación atractiva y minimalista para una herramienta de inteligencia artificial.",
        link: "https://scalify-ai.vercel.app/",
        GitHub: "https://github.com/aaleex05/Scalify-AI",
        image: "/projects/scalifyai.webp",
        tags: [TAGS.Astro, TAGS.TailwindCSS, TAGS.HTML],
    },
];
---

{
    PROJECTS.map(({ title, description, tags, image, link, GitHub }) => (
        <article class="mb-8">
            <h3 class="lg:text-3xl text-2xl font-semibold text-blue-400 mb-2">
                {title}
            </h3>
            <p class="lg:text-lg text-white/80 text-lm mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row pb-4">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-4`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt="Captura de pantalla del projecto"
            />
            <div class="inline-flex gap-x-4 pt-4">
                <a
                    href={link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="rounded-full flex gap-x-2 py-1 md:py-2 px-2 md:px-4 border text-white/80 border-white/10 bg-white/5 text-xs md:text-base hover:bg-white/10 transition"
                >
                    <LinkIcon />
                    Preview
                </a>
                <a
                    href={GitHub}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="rounded-full flex gap-x-2 py-1 md:py-2 px-2 md:px-4 border text-white/80 border-white/10 bg-white/5 text-xs md:text-base hover:bg-white/10 transition"
                >
                    <GithubIcon class="size-4 lg:size-6"/>GitHub
                </a>
            </div>
        </article>
    ))
}
